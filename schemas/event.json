{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "event.json",
    "title": "Event",
    "type": "object",
    "required": ["protocol", "recipients", "data"],
    "properties": {
        "protocol": {
            "$id": "#/properties/protocol",
            "title": "Transfer protocol",
            "type": "string",
            "enum": ["HTTP", "WS", "QUEUE", "PUSH"]
        },
        "recipients": {
            "$id": "#/properties/recipients",
            "title": "Recipient keys",
            "type": "array",
            "items": {"type": "string"}
        },
        "data": {
            "$id": "#/properties/data",
            "title": "Event data",
            "type": "object",
            "properties": {
                "domain": {
                    "$id": "#/properties/data/domain",
                    "title": "Data domain",
                    "type": "string",
                    "enum": ["CUSTODIAN", "N8N", "EVENT"]
                },
                "action": {
                    "$id": "#/properties/data/action",
                    "title": "Action",
                    "type": "string",
                    "enum": ["SUBSCRIBE", "UNSUBSCRIBE", "RESET", "NOTIFY"]
                },
                "data": {
                    "$id": "#/properties/data/data",
                    "title": "Action data",
                    "type": "array",
                    "items": {"type": "object"}
                }
            }
        }
    }
}
